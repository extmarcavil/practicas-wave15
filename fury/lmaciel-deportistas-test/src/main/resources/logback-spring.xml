<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
  <!-- use Spring default values -->
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

  <springProfile name="local | integration_test">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <!-- @formatter:off -->
        <pattern>
            %clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(--){faint} %clr([%1.15t]){faint} %clr(%-1.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}
        </pattern>
        <!-- @formatter:on -->
        <charset>utf8</charset>
      </encoder>
    </appender>
    <root level="INFO">
      <appender-ref ref="STDOUT"/>
    </root>
  </springProfile>

  <springProfile name="!local &amp; !integration_test">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
        <pattern>
          %d{yyyy-MM-dd HH:mm:ss} [level:%p] %c{1} - [requestId:%X{requestId}] %m%n
        </pattern>
      </encoder>
    </appender>
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
      <queueSize>10000</queueSize>
      <neverBlock>true</neverBlock>
      <appender-ref ref="STDOUT"/>
    </appender>
    <root level="INFO">
      <appender-ref ref="ASYNC"/>
    </root>
  </springProfile>
</configuration>
