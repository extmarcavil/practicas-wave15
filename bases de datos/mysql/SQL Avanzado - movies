#Mostrar el título y el nombre del género de todas las series.
SELECT se.title, gen.name FROM series se JOIN genres gen ON se.genre_id = gen.id;

#Mostrar el título de los episodios, el nombre y apellido de los actores que trabajan en cada uno de ellos.
SELECT ep.title, act.first_name, act.last_name FROM episodes ep, actors act, actor_episode aep 
WHERE act.id = aep.actor_id AND ep.id = aep.episode_id;

#Mostrar el título de todas las series y el total de temporadas que tiene cada una de ellas.
SELECT se.title, count(sea.serie_id) FROM series se JOIN seasons sea ON se.id = sea.serie_id group by se.title;

#Mostrar el nombre de todos los géneros y la cantidad total de películas por cada uno, siempre que sea mayor o igual a 3.
SELECT gen.name, count(mov.id) as operation  FROM genres gen  JOIN movies mov ON mov.genre_id = gen.id group by gen.name having operation>=3;

#Mostrar sólo el nombre y apellido de los actores que trabajan en todas las películas de la guerra de las galaxias y que 
#estos no se repitan.
SELECT  distinct first_name, act.last_name FROM actors act, movies mov, actor_movie amov 
WHERE act.id = amov.actor_id AND mov.id = amov.movie_id AND mov.title LIKE "La Guerra de las galaxias%";